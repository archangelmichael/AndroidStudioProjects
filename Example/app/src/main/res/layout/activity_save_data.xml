<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.radi.example.SaveDataActivity"
        >

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <EditText
                android:id="@+id/etSaveEntry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/text_save_entry_placeholder"
                android:text="" />

            <Button
                android:id="@+id/btnSaveData"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:onClick="onSaveData"
                android:text="@string/button_save_entry" />

            <Button
                android:id="@+id/btnLoadData"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:onClick="onLoadData"
                android:text="@string/button_load_entry" />

            <Button
                android:id="@+id/btnClearData"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:onClick="onClearData"
                android:text="@string/button_clear_entry" />
        </LinearLayout>
    </ScrollView>
