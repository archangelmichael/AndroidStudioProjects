<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.radi.example.animations.AnimationsActivity"
    android:orientation="vertical"
    android:id="@+id/animations_master_layout">

    <TextView
        android:id="@+id/tvAnimationsTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/text_animations_title"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_animate_scenes_transition"
        android:onClick="onTransitionScenes"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/animations_scene_root">
        <include layout="@layout/scene_a" />
    </FrameLayout>
</LinearLayout>