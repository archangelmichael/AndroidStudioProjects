<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.radi.admin.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvBluetoothState"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="" />

    <Button
        android:id="@+id/btnBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onChangeBluetooth"
        android:text="@string/btn_disable_bluetooth" />

    <TextView
        android:id="@+id/tvWifiState"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="" />

    <Button
        android:id="@+id/btnWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onChangeWifi"
        android:text="@string/btn_disable_wifi" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onCheckBattery"
        android:text="@string/btn_check_battery" />

</LinearLayout>
