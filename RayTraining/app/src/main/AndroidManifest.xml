<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.radi.raytraining">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FortuneActivity"
            android:label="@string/app_fortune_activity"
            android:screenOrientation="portrait" />

        <activity android:name=".intents.TakePictureActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_intent_take_picture_activity"/>

        <activity android:name=".intents.AddPictureTextActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_intent_add_text_to_picture_activity"/>
    </application>

</manifest>