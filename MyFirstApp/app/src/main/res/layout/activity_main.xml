<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- Displays keyboard when touched -->
    <EditText
        android:id="@+id/dummy_edit_text"
        android:hint="@string/dummy_hint"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:padding="10dp"

        android:textSize="20sp"
        android:background="@color/colorPrimaryDark"
        android:inputType="textCapSentences" />

    <TextView
        android:id="@+id/dummy_text_view"
        android:text="@string/dummy_text"

        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"

        android:textSize="20sp"
        android:background="@color/colorAccent"
        />

    <!-- This nested layout contains views of its own -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary"

        android:orientation="horizontal">
        <!-- Set OnClickListener to trigger results when pressed -->
        <Button
            android:id="@+id/dummy_button"
            android:text="@string/dummy_button"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:textSize="20sp" />
        <!-- Shows an image from your drawable resources -->
        <ImageView
            android:contentDescription="@string/dummy_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart = "20dp"
            android:src="@drawable/dummy" />
        <!-- Closing tag for the horizontal nested layout -->
    </LinearLayout>

    <ListView
        android:id="@+id/dummy_list_view"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!-- List whose dataset is defined in code with an adapter -->

</LinearLayout>
